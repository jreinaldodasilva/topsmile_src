# TopSmile Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================
# SERVER CONFIGURATION
# ===========================
NODE_ENV=development
PORT=5000

# ===========================
# DATABASE
# ===========================
# MongoDB connection string
DATABASE_URL=mongodb://localhost:27017/topsmile

# For MongoDB Atlas (production):
# DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/topsmile?retryWrites=true&w=majority

# ===========================
# AUTHENTICATION
# ===========================
# JWT Secret - Use a strong 256-bit random string in production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token expiry
JWT_EXPIRES_IN=15m

# ===========================
# FRONTEND INTEGRATION
# ===========================
# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# For production:
# FRONTEND_URL=https://yourdomain.com

# ===========================
# EMAIL CONFIGURATION
# ===========================
# Email addresses
FROM_EMAIL=noreply@topsmile.com
ADMIN_EMAIL=contato@topsmile.com

# SendGrid Configuration (Production recommended)
SENDGRID_API_KEY=your-sendgrid-api-key

# Ethereal Email (Development/Testing)
ETHEREAL_USER=ethereal.user@ethereal.email
ETHEREAL_PASS=ethereal.pass

# SMTP Configuration (Alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ===========================
# SECURITY & PERFORMANCE
# ===========================
# Verify user existence on each request (optional, impacts performance)
VERIFY_USER_ON_REQUEST=false

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX=100

# Contact form rate limiting
CONTACT_RATE_LIMIT_WINDOW_MS=900000
CONTACT_RATE_LIMIT_MAX=5

# ===========================
# EXTERNAL SERVICES
# ===========================
# Twilio (for SMS notifications - future feature)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Redis (for session storage and queues - future feature)
# REDIS_URL=redis://localhost:6379

# ===========================
# LOGGING & MONITORING
# ===========================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ===========================
# DEVELOPMENT SETTINGS
# ===========================
# Enable detailed error messages in responses
DETAILED_ERRORS=true

# Mock external services
MOCK_EMAIL_SERVICE=false
MOCK_SMS_SERVICE=false